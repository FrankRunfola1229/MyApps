  <style>
    .landing-container {
      display: flex;
      flex-wrap: wrap;
      align-items: center;
      justify-content: space-around;
      width: 100%;
      box-shadow: .8px 55px 50px -20px #b6b6b6;
      margin: 30px auto;
    }

    .card {
      margin: 10px;
      height: 250px;
      width: 250px;
      border: none;
      box-shadow: 0px 3px 5px 1px #c9c7c7;
      background-color: whitesmoke;
      vertical-align: middle;
    }

    img {
      height: 210px;
      width: 220px;
      margin: 8px auto 5px auto;
      border: .2px solid rgba(53, 49, 51, 0.32);
      border-radius: 5%
    }

    h4 {
      margin-top: 70px;
    }

    .landing-container a {
      color: black
    }

    @media only screen and (max-width: 450px) {
      h5 {
        font-size: 1rem;
      }

      .card {
        margin: 3px;
        height: 150px;
        width: 150px;
      }

      img {
        height: 110px;
        width: 110px;
        margin: 8px auto 5px auto;
      }

      .table tbody td {
        font-size: 75%;
      }
    }
  </style>
</head>

